<% provide(:class_text, 'overtime notification') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <!--<div class="modal-header">-->
    <!--  <button type="button" class="close" data-dismiss="modal" aria-label="Close">-->
    <!--    <span aria-hidden="true">&times;</span>-->
    <!--  </button>-->
    <!--  <h1 class="modal-title">【#{}からの残業申請】</h1>-->
    <!--</div>-->
    <div class="modal-body">
      
      <%= form_with(model: @attendances, url:attendances_update_overtime_application_notification_user_path(@user), local: true, method: :patch) do |f| %>
        <%= render 'shared/error_messages', object: @user %>
        <!--< %= f.hidden_field :date, :value => @attendance.worked_on %>-->
        
        <% @applicant_users.each do |applicant_user| %>
        
          <table class="table table-bordered">
  
            <h1 class="modal-title">【<%= "#{applicant_user.name}" %>からの残業申請】</h1>
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>指定勤務終了時間</th>
                <th>時間外時間</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
                <th>変更</th>
                <th>勤怠を確認する</th>
              </tr>
            </thead>
            
            <% @applicant_attendances = @attendances.where(user_id: applicant_user.id) %>
            <% @applicant_attendances.each do |applicant_attendance| %>
              <tbody>
                <tr>
                  <% css_class =
                    case %w{日 月 火 水 木 金 土}[applicant_attendance.worked_on.wday]
                    when '土'
                      'text-primary'
                    when '日'
                      'text-danger'
                    end
                  %>
                  <th><%= l(applicant_attendance.worked_on, format: :short) %></th>
                  <td class="<%= css_class %>"><%= %w{日 月 火 水 木 金 土}[applicant_attendance.worked_on.wday] %></td>
                  <th><%= l(applicant_attendance.scheduled_end_time, format: :time) %></th>
                  <th><%= l(applicant_user.designated_work_end_time, format: :time) %></th>
                  <th>
                    <% if applicant_attendance.scheduled_end_time.present? %>
                      <%= overtime(applicant_user.designated_work_end_time, applicant_attendance.next_day, applicant_attendance.scheduled_end_time, applicant_attendance.worked_on) %>
                    <% end %>
                  </th>
                  <th><%= applicant_attendance.business_process_content %></th>
                  <th><%= f.select :overtime_application_status, [["承認", 0],["申請中", 1],["否認", 2],["なし", 3]], :selected=>1 %></th>
                  <th><%= f.check_box :change, {}, "true", "false" %></th>
                  <th><%= link_to "確認", user_path(applicant_user.id), class: "btn btn-primary" %></th>
                </tr>
                
              </tbody>
            <% end %>
            
          </table>
        <% end %>
        
        <%# テーブルの中に入れるとボタンが動作しなくなる・テーブルをテーブルの中に入れ子にしない %>
        <%= f.submit yield(:button_text), class: "btn btn-block btn-primary btn-#{yield(:class_text)}" %>
      <% end %>
    </div>
  </div>
</div>